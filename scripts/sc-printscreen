#!/bin/bash

ARGS=$1

if [ "$ARGS" == "entire" ]; then
	scrot --silent \
		--quality 80 \
		'es__%m-%d__%I-%M-%S__$wx$h.png' \
		--exec 'mv $f /home/cai/Images/ps'

elif [ "$ARGS" == "focused" ]; then
	scrot --silent \
		--quality 80 \
		--focused \
		--border \
		'fw__%m-%d__%I-%M-%S__$wx$h.png' \
		--exec 'mv $f /home/cai/Images/ps'

elif [ "$ARGS" == "selected" ]; then
	scrot --silent \
		--quality 80 \
		--select \
		'ss__%m-%d__%I-%M-%S__$wx$h.png' \
		--exec 'mv $f /home/cai/Images/ps'

else
	exit 1

fi
